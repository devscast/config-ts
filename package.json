{
  "name": "@devscast/config",
  "version": "1.0.3",
  "description": "Helps you find, load, combine, autofill and validate configuration values of any kind",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup --minify",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "============= HUSKY =============": "",
    "prepare": "husky",
    "commit": "cz",
    "=========== CODE STYLE ============": "",
    "check": "prettier ./src --check",
    "format": "prettier ./src --write",
    "lint:check": "eslint ./src --debug",
    "lint:fix": "eslint ./src --fix",
    "check-types": "tsc --noEmit",
    "=========== NPM PUBLISH ==============": "",
    "release": "npm run build && npm publish --access public",
    "version": "changeset version"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "config",
    "env"
  ],
  "homepage": "https://github.com/devscast/config-ts#readme",
  "bugs": {
    "url": "https://github.com/devscast/config-ts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devscast/config-ts.git"
  },
  "license": "MIT",
  "author": "bernard-ng <bernard@devscast.tech>",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/ini": "^4.1.1",
    "@types/node": "^24.10.0",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "ini": "^6.0.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.6",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "ini": "^6.0.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "peerDependenciesMeta": {
    "ini": {
      "optional": true
    },
    "yaml": {
      "optional": true
    }
  }
}
